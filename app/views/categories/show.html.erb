<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
  <li><%= link_to item.title, item_path(item) %> | <%= number_to_currency(to_dollars(item.price)) %></li>
  <% if user_signed_in? %>
    <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
  <% end %>
<% end %>

</ul>
